<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        tools:text="trimino_david" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        tools:text="22h"/>

    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/tvUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/ibLikes"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/ivPostImage"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ufi_heart"
        android:clickable="true"/>

    <ImageButton
        android:id="@+id/ibComments"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ufi_comment"
        android:layout_below="@id/ivPostImage"
        android:layout_toRightOf="@id/ibLikes"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ufi_comment"
        android:clickable="true"
        android:focusable="true" />

    <ImageButton
        android:id="@+id/ibDirect"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/ivPostImage"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/ibComments"
        android:background="@drawable/ufi_new_direct"
        android:clickable="true"/>

    <ImageButton
        android:id="@+id/ibSaved"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ufi_save"
        android:layout_below="@id/ivPostImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ufi_save"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/description"
        android:layout_below="@id/ibComments"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        tools:text="HELLO THERE"/>
</RelativeLayout>